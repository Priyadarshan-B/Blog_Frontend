@page "/"
@using MudBlazor

    <MudContainer  Class="mud-theme-background py-12 ">
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudText Typo="Typo.h1" Class="main-text font-extrabold text-1xl leading-tight">
                    Human<br />stories & ideas
                </MudText>
                <MudText Typo="Typo.h6" Class="sub-text mt-10">
                    A place to read, write, and deepen your understanding
                </MudText>
                <MudButton Variant="Variant.Filled" Color="Color.Dark" Style="background-color: black; color:white"  Class=" mt-6 px-8 py-2  rounded-pill-home">
                    Start reading
                </MudButton>
            </MudItem>
            <MudItem xs="12" md="6" Class="flex justify-center items-center">
                <img src="images/hero-art.webp" alt="Hero image" style="width: 100%; height: 550px;" />
            </MudItem>
        </MudGrid>
    </MudContainer>
